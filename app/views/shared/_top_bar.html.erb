<div id="top-bar-wrapper">
  <div id="logo">
    <%= link_to image_tag("shared/placeholder-logo.png", :width=>"125px;",
        :height => "93px;"), root_path %>
  </div>
  <div id="top-bar">
    <% if session[:user_id] %>
      <%= button_to "Logout", logout_path, :form_class => "login" %>
      <span class="logged_in_username label_span_style">
        <%= session[:username] %>
      </span>
      <%= label_tag 'logged_in_account', "Login as: ", 
                    :class => "logged_in_label label_span_style" %>
    <% else %>
      <%= button_to "Register", new_user_path, :form_class => "register" %>
      <% if request.fullpath == '/login' %>
        <%= button_to "Merchant Registration", new_merchant_path, :form_class => "register" %>   
      <% else %>      
        <%= button_to "Login", login_path, :form_class => "login" %>
        <%= button_to "Merchant Login", merchant_login_path,
                      :form_class => "merchant_login" %>              
      <% end %>
    <% end %>       
  </div>
