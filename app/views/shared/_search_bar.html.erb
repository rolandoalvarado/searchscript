<div id="search-bar">
   <%= form_tag locations_path, :method => :get do %>
    <div id="search_placeholder">
	    <div id="search_field_group">
			  <%= text_field_tag :search, params[:search], :id => 'search_field', 
			                     :size => 30, :placeholder => 'Search Mechanic Name, Address and Zip Code' %>
				<%= submit_tag "Find Mechanic", :name => nil, :class => 'search' %>
				<%= link_to "Forum", merchant_login_path,
                :class => "forum" %>
        <%= link_to "Learn", login_path, :class => "learn" %>
		  </div> 
		</div>
  <% end %>
</div>
